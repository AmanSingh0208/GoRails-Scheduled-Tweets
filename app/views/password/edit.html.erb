<h1 class="display-1 mt-3 mb-3">Update Password</h1>

    <%= form_with model: Current.user1, url: edit_password_path do |form| %>

    <% if form.object.errors.any? %>
        <div class="alert alert-danger">
            <% form.object.errors.full_messages.each do |message|%>
                <div>
                    <%= message %>
                </div>
            <%end%>
        </div>
    <%end%>
       
        <div class="input-group mb-3">
            <%= form.password_field :password, class: "form-control", placeholder: "Password"   %>
        </div>

        <div class="input-group mb-3">
            <%= form.password_field :password_confirmation, class: "form-control", placeholder:"Comfirm Password"  %>
        </div>

        <div class="mb-3">
            <%= form.submit "Update Password", class: "btn btn-outline-primary mt-3" %>
        </div>

    <% end %>