<h1 class="h1 mb-3 mt-3">Sing Up</h1>
<%= form_with model: @user1, url: sing_up_path do |form| %>
    <% if form.object.errors.any? %>
        <div class="alert alert-danger">
            <% form.object.errors.full_messages.each do |message|%>
                <div>
                    <%= message %>
                </div>
            <%end%>
        </div>
     <%end%>
        <div class="input-group mb-3">
           <%= form.text_field :email, class: "form-control", placeholder:"Email" %>
        </div> 

        <div class="input-group mb-3">
            <%= form.password_field :password, class: "form-control", placeholder: "Password"   %>
        </div>

        <div class="input-group mb-3">
            <%= form.password_field :password_confirmation, class: "form-control", placeholder:"Comfirm Password"  %>
        </div>

        <div class="mb-3">
            <%= form.submit "Sing up", class: "btn btn-primary mt-3" %>
        </div>

<% end %>